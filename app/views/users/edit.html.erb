<h1>Edit User Credentials</h1>

<%= form_for @user do |f| %>

    <% if @user.errors.any? %>
    <p><%= @user.errors.full_messages.join(', ') %></p>
    <% end %>

    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"  %>
    </div>

    <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control"  %>
    </div>

    <%= f.submit class: "btn btn-outline-primary" %><br><br>
    <%= link_to "Change Password", user_path(@user), class: "btn btn-outline-primary" %>

<% end %>

