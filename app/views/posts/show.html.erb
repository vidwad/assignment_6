<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<p><small>Posted <%= time_ago_in_words @post.created_at %> ago</small></p>

<div class="owner-controls mb-4">
  <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-primary" %>
  <%= link_to "Delete", post_path(@post), method: :delete, class: "btn btn-outline-primary" %>
</div>

<h4>Comment</h4>

<%= render 'comments/form' %>

<ul class="list-unstyled mt-4">
  <% @comments.each do |comment| %>
    <li class="media mb-2">
      <div class="media-body">
        <%= comment.body %> <br/>
        <small>
          Commented <%= time_ago_in_words comment.created_at %> ago â€¢
          <%= link_to 'Delete', comment_path(comment), method: :delete %>
        </small>
    </li>
  <% end %>
</ul>
